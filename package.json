{
  "name": "@gcorptools/typeorm-helper",
  "version": "0.0.0",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "yarn del build --force",
    "build": "yarn clean && tsc",
    "test": "jest --watchAll --no-cache",
    "coverage": "jest --watchAll --no-cache --coverage",
    "format": "prettier --config .prettierrc src/**/*.ts --write"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "^@src(.*)$": "<rootDir>/src$1"
    }
  },
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "del-cli": "^4.0.1",
    "jest": "^28.1.0",
    "pg-mem": "^2.4.3",
    "prettier": "^2.6.2",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^28.0.3",
    "typeorm": "^0.3.6",
    "typescript": "^4.7.2"
  },
  "_moduleAliases": {
    "@src": "src"
  }
}
